@model shop.Web.Data.Entities.Product

@{
    ViewData["Title"] = "Delete";
}

    <center>
        <h1 class="text-success">Eliminar</h1>


        <h3>¿Estas seguro que quieres borrar este producto?</h3>
    </center>
<br />
<br />
<br />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-6">
        <strong>
            <div class="col-md-4 resultado">

                @Html.DisplayNameFor(model => model.Name)
                <br />
                @Html.DisplayNameFor(model => model.Price)
                <br />

                @Html.DisplayNameFor(model => model.LastPurchase)
                <br />
                @Html.DisplayNameFor(model => model.LastSale)
                <br />
                @Html.DisplayNameFor(model => model.IsAvailabe)
                <br />
                @Html.DisplayNameFor(model => model.Stock)

            </div>
        </strong>
        <div class="col-md-5 resultado">
            @Html.DisplayFor(model => model.Name)
            <br />
            @Html.DisplayFor(model => model.Price)
            <br />
            @Html.DisplayFor(model => model.LastPurchase)
            <br />
            @Html.DisplayFor(model => model.LastSale)
            <br />
            @Html.DisplayFor(model => model.IsAvailabe)
            <br />
            @Html.DisplayFor(model => model.Stock)
        </div>
        <div class="col-md-3">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width:300px;" />
            }
        </div>
    </div>
</div>
<br />
<center>
    <div class="row">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-danger">Devolver a la lista de productos</a>
        </form>
    </div>
</center>
